<p style="color: green"><%= notice %></p>

<h1>Your Friends</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <tr>
      <td>
        <%= friend.first_name %>
      </td>
      <td>
        <%= friend.last_name %>
      </td>
      <td>
        <%= friend.email %>
      </td>
      <td>
        <%= friend.phone %>
      </td>
      <td>
        <%= friend.twitter %>
      </td>
      <td>
        <%= link_to "View", friend %>
      </td>
      <td>
        <%= link_to "Edit", edit_friend_path(friend) %>
      </td>
      <td>
        <%= button_to "Delete", @friend, method: :delete %>
      </td>
    </tr>

    <% end %>
  </tbody>
</table>
  

<%= link_to "New friend", new_friend_path %>
